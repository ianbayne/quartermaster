<div class="container spacer_up_down" id="search_result">
  <div class="row">
    <div class="card__container col-xs-12 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">

    <% if @equipment.length > 0 %>
    <h2>Equipment Available</h2>
    <% else %>
    <h2>No Matching Result</h2>
    <% end %>
    
    <% @equipment.each do |equipment| %>
      <% unless equipment.contracts.exists? %>
        <%= link_to equipment_path(equipment), class: "" do%>
          <div class="card col-xs-6 col-sm-4 col-md-4" style="background-image: url('<%= cl_image_path equipment.photo, crop: :fill %>');">
            <div class="card__overlay">
              <div class="card__text--container">
                <p class="equipment__name">
                  <%= equipment.name %>
                </p>
                <p class="equipment__category">
                  <%= equipment.category %>
                </p>
                <p class="equipment__price">
                  <%#= equipment.price %>
                </p>
              </div>

            </div>
          </div>
        <% end %>
      <% end %>



    <% end %>

    </div>
  </div>
</div>






