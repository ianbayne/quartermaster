
<div class="banner">
  <div class="banner-content">
    <h1>QuarterMaster</h1>
    <p>Book unique camping gear and experience the outback</p>

    <%= link_to "Sign-up", new_user_registration_path, {class: "btn btn-primary btn-lg"} %>

  </div>
</div>

<%#= simple_form_for(@equipment) do |f| %> <!-- Needs instance of equipment to work -->
  <%#= f.input :name, placeholder: "&#xf002; Try \"2 person camping tent\"" %>
  <%#= f.submit "Search" %>
<%# end %>
<!-- TEMPORARY DUMMY -->
