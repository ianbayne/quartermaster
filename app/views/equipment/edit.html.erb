<%= render 'shared/navbar' %>

<div class="container spacer_up_down">

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 well__v--sm">
      <%= link_to "< back to dashboard", user_path, class: "edit_text display__inline-block float-left" %>
    </div>
    <div class="col-sm-6 col-sm-offset-3">
      <%= simple_form_for @equipment, url: url_for(action: 'update', controller: 'equipment'),
          method: 'patch' do |f| %>
        <%#= f.error_notification %>
        <%= f.input :name %>
        <%= f.input :description, as: :text %>
        <%= f.input :category%>
        <%= f.input :price, label: "Price per day" %>
        <%= cl_image_tag @equipment.photo.url, :class => "width__100" if @equipment.photo.present? %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
