<%= render 'shared/navbar' %>
<div class="container spacer_up_down">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= simple_form_for @equipment, url: url_for(action: 'update', controller: 'equipment'),
          method: 'patch' do |f| %>
        <%#= f.error_notification %>
        <%= f.input :name %>
        <%= f.input :description, as: :text %>
        <%= f.input :category%>
        <%= f.input :price, label: "Price per day" %>
        <%= cl_image_tag @equipment.photo.url if @equipment.photo.present? %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
